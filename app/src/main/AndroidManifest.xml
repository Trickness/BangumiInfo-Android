<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moe.exmagic.tricks.banguminews">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivitySearch"/>
        <activity android:name=".ActivityItemDetail"
            android:theme="@style/ImageTranslucentTheme"/>
        <activity android:name=".ActivityBlogList"/>
        <activity android:name=".ActivityBlogView"/>
        <activity android:name=".ActivityCommentList"/>
        <activity android:name=".ActivityCharactersList"/>
        <activity android:name=".ActivityCharacterView"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>