<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:background="@drawable/collection_action_outer_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/collection_box_action_font_size"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="6dp"
                android:paddingStart="4dp"
                android:paddingBottom="6dp"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想看"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA"/>

            <TextView
                android:textSize="@dimen/collection_box_action_font_size"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="4dp"
                android:paddingStart="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看过"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA"/>

            <TextView
                android:textSize="@dimen/collection_box_action_font_size"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="4dp"
                android:paddingStart="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在看"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA"/>

            <TextView
                android:textSize="@dimen/collection_box_action_font_size"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="4dp"
                android:paddingStart="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搁置"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA"/>

            <TextView
                android:textSize="@dimen/collection_box_action_font_size"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="4dp"
                android:paddingStart="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抛弃"/>
        </LinearLayout>
        <ImageView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"/>
        <LinearLayout
            android:id="@+id/collection_box_vote_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的评价"/>

        <com.idlestar.ratingstar.RatingStarView
            android:layout_gravity="center"
            app:cornerRadius="1dp"
            app:starMargin="12dp"
            app:strokeWidth="2px"
            app:strokeColor="#457DD7"
            app:starForegroundColor="#DB6958"
            app:starBackgroundColor="#E8E8E8"
            app:starNum="10"
            app:rating="1"
            app:onlyHalfStar="true"
            app:enableSelectRating="true"
            app:starThickness="0.7"
            android:layout_marginTop="8dp"
            app:drawStrokeForEmptyStar="false"
            app:drawStrokeForHalfStar="true"
            android:paddingTop="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>


        <Button
            android:text="提交"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

