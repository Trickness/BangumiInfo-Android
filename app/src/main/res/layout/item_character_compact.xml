<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="8dp"

    android:layout_marginBottom="1dp"
    android:clickable="true">
    <ImageView
        android:id="@+id/character_compact_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingTop="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/character_compact_title_container"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/character_compact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/character_compact_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_character_role"
                android:paddingBottom="2dp"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:layout_marginTop="-3dp"
                android:layout_marginStart="8dp"
                android:textSize="12sp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/character_compact_commet"
                android:textSize="12sp"
                android:textColor="@color/colorBangumiMain"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/tag_border_common"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="1dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/character_compact_name_cn"
                android:textSize="10sp"
                android:textColor="@color/colorGray"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/character_compact_cv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="10sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="18dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

</LinearLayout>